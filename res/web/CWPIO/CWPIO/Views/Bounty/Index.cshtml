
@{
    ViewData["Title"] = "Bounty";
    Layout = "~/Views/Cabinet/_AdminLayout.cshtml";
}

@model ApplicationUser

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                <div class="user-block block text-center">
                    <div class="avatar">
                        <img src="https://d19m59y37dris4.cloudfront.net/dark-admin/1-3-2/img/avatar-1.jpg" alt="..." class="img-fluid">
                        @*<div class="order dashbg-2">1st</div>*@
                    </div><a href="#" class="user-title">
                        <h5>@Model.UserName</h5><span></span>
                    </a>
                    <br />
                    <div class="contributions">@(Model.BountyUserCampaings?.Sum(b => b.TotalItemCount) ?? 0)</div>
                    @if (Model.BountyUserCampaings != null && Model.BountyUserCampaings.Any())
                    {
                    <div class="details d-flex">
                        @foreach (var bounty in Model.BountyUserCampaings)
                        {
                            <div class="item"><i class="fa @bounty.BountyCampaing.FaClass"></i><strong>@bounty.TotalItemCount</strong></div>
                        }
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
