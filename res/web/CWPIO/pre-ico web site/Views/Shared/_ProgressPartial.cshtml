@model BarModel

<style>
  .v_dark .tk_counter_inner .progress, .v_dark .tk_counter_inner .progress-bar, .v_light_dark .tk_counter_inner .progress, .v_light_dark .tk_counter_inner .progress-bar {
    color: #0c0e27;
}

.tk_counter_inner .progress {
    background-color: #fff;
/*    border: 1px solid #fff;*/
    height: 18px;
    /*margin-bottom: 40px;*/
    margin-top: 25px;
    overflow: visible;
    position: relative;
}

.tk_counter_inner .progress, .tk_counter_inner .progress-bar {
    /*border-radius: 20px;*/
    color: #5957cd;
    font-size: 14px;
    text-align: right;
}

.v_dark .tk_counter_inner .progress, .v_dark .tk_counter_inner .progress-bar, .v_light_dark .tk_counter_inner .progress, .v_light_dark .tk_counter_inner .progress-bar {
    color: #0c0e27;
}

.tk_counter_inner .progress-bar.gradient {
/*    background: -webkit-linear-gradient(left, #0400ff 0%,#00055a 99%);*/
/*    background: linear-gradient(to right, #0400ff 0%,#00055a 99%);*/
    background: #1210ff;
}

.tk_counter_inner .progress-bar {
    background: #fff;
    font-weight: 600;
}

.tk_counter_inner .progress-bar {
    padding-right: 12px;
}
.tk_counter_inner .progress, .tk_counter_inner .progress-bar {
    border-radius: 10px;
    color: #5957cd;
    font-size: 14px;
    text-align: right;
}
.progress-bar-striped {
    background-image: linear-gradient(45deg,rgba(255,255,255,.15) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.15) 50%,rgba(255,255,255,.15) 75%,transparent 75%,transparent);
    background-size: 1rem 1rem;
}
.progress-bar {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    color: #fff;
    text-align: center;
    background-color: #007bff;
    transition: width .6s ease;
}

.progress .progress_label {
    background-color: #000000;
    bottom: -6px;
    color: #ffffff;
    line-height: 1;
    position: absolute;
    top: -6px;
    width: 1px;
}
.bg-white {
    background-color: #fff!important;
}
.progress .progress_label strong {
    font-size: 14px;
    font-weight: 600;
    left: 50%;
    margin-top: 5px;
    position: absolute;
    top: 100%;
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    -moz-transform: translateX(-50%);
    transform: translateX(-50%);
    white-space: nowrap;
}

.progress .progress_label {
    background-color: #000000;
    bottom: -6px;
    color: #ffffff;
    line-height: 1;
    position: absolute;
    top: -6px;
    width: 1px;
}

.bg-white {
    background-color: #fff!important;
}
.progress_min_val {
    color: #00c9ff;
    font-size: 14px;
    font-weight: 600;
    padding: 0 5px;
    position: absolute;
    left: 0;
    top: -30px;
    font-family: 'futura';
}
.progress_max_val {
    color: #ffffff;
    font-size: 14px;
    font-weight: 600;
    padding: 0 5px;
    position: absolute;
    right: 0;
    top: -30px;
    font-family: 'futura';
}
</style>
<div class="tk_counter_inner">
  <div class="progress">
    <div class="progress-bar progress-bar-striped gradient" role="progressbar" aria-valuenow="@(Model.Percent.ToString("F0"))" aria-valuemin="0" aria-valuemax="100" style="width: @(Model.Percent.ToString("F0"))%"> @(Model.Percent.ToString("F2"))% </div>
    <span class="progress_label bg-white" style="left: 30%"> <strong> @Model.Sold.ToString("N0") CWT-P </strong></span>
    <span class="progress_label bg-white" style="left: 75%"> <strong> @Model.Cap.ToString("N0") CWT-P </strong></span>
    <span class="progress_min_val">Soft cap</span>
    <span class="progress_max_val">Hard-cap</span>
  </div>
</div>