@model BarModel

<style>
  .v_dark .tk_counter_inner .progress, .v_dark .tk_counter_inner .progress-bar, .v_light_dark .tk_counter_inner .progress, .v_light_dark .tk_counter_inner .progress-bar {
    color: #0c0e27;
}

.tk_counter_inner .progress {
    background-color: #fff;
/*    border: 1px solid #fff;*/
    height: 10px;
    /*margin-bottom: 40px;*/
    margin-top: 25px;
    overflow: visible;
    position: relative;
}

.tk_counter_inner .progress, .tk_counter_inner .progress-bar {
    /*border-radius: 20px;*/
    color: #5957cd;
    font-size: 14px;
    text-align: right;
}

.v_dark .tk_counter_inner .progress, .v_dark .tk_counter_inner .progress-bar, .v_light_dark .tk_counter_inner .progress, .v_light_dark .tk_counter_inner .progress-bar {
    color: #0c0e27;
}

.tk_counter_inner .progress-bar.gradient {
/*    background: -webkit-linear-gradient(left, #0400ff 0%,#00055a 99%);*/
/*    background: linear-gradient(to right, #0400ff 0%,#00055a 99%);*/
    background: #1210ff;
}

.tk_counter_inner .progress-bar {
    background: #fff;
    font-weight: 600;
}

.tk_counter_inner .progress-bar {
    padding-right: 12px;
}
.tk_counter_inner .progress, .tk_counter_inner .progress-bar {
    border-radius: 5px;
    color: #5957cd;
    font-size: 14px;
    text-align: right;
}
.progress-bar-striped {
    background-image: linear-gradient(45deg,rgba(255,255,255,.15) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.15) 50%,rgba(255,255,255,.15) 75%,transparent 75%,transparent);
    background-size: 1rem 1rem;
}
.progress-bar {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    color: #fff;
    text-align: center;
    background-color: #007bff;
    transition: width .6s ease;
}

.progress .progress_label {
    background-color: #000000;
    bottom: -6px;
    color: #ffffff;
    line-height: 1;
    position: absolute;
    top: -6px;
    width: 1px;
}
.bg-white {
    background-color: #fff!important;
}
.progress .progress_label strong {
    font-size: 14px;
    font-weight: 400;
    left: 41%;
    /* margin-top: 5px; */
    position: absolute;
    top: -32px;
    -webkit-transform: translateX(-41%);
    -ms-transform: translateX(-41%);
    -moz-transform: translateX(-41%);
    transform: translateX(-41%);
    white-space: nowrap;
    font-family: 'futurabook';
    font-size: 20px;
}

.progress .progress_label {
    background-color: #000000;
    bottom: -6px;
    color: #ffffff;
    line-height: 1;
    position: absolute;
    top: -6px;
    width: 0;
}

.bg-white {
    background-color: #fff!important;
}
.progress_min_val {
    color: #00c9ff;
    font-size: 18px;
    font-weight: 600;
    padding: 0 5px;
    position: absolute;
    left: 8px;
    top: -67px;
    font-family: 'futurabook';
}
.progress_max_val {
    color: #ffffff;
    font-size: 18px;
    font-weight: 600;
    padding: 0 5px;
    position: absolute;
    right: 9px;
    top: -67px;
    font-family: 'futurabook';
}
  
  .tk_counter_inner {
      padding-top: 30px;
  }
  
  .dot-end {
      width: 4px;
      height: 4px;
      background: #000;
      display: block;
      position: absolute;
      right: 4px;
      top: 3px;
      -ms-border-radius: 4px;
      border-radius: 4px;
      z-index: 1;
      background-color: #1a191a;
  }
  .dot-end-first {
      right: -7px;
  }
  
  .dot-middle {
      right: -7px;
  }
  
  .dash-soft {
      position: absolute;
      right: -6px;
      height: 58px;
      display: block;
      width: 1px;
      background-color: transparent;
      border-right: 1px dotted #00c9ff;
      bottom: 7px;
      z-index: 1;
  }
  
  .dash-soft.dash-current {
      border-color: #1210ff;
  }
  .dash-soft.dash-last {
      border-color: #fff;
      right: 6px;
  }
  
  .dash-label {
      white-space: nowrap;
      position: absolute;
      right: 7px;
      top: -8px;
      font-family: 'futurabook';
      color: #1210ff;
      font-size: 18px;
  }
  
  .dash-label-total {
      position: absolute;
      left: 76px;
      top: -105px;
      font-family: 'futurabook';
      color: #5e5e5e;
      font-size: 13px;
      text-align: left;
      width: 60px;
      line-height: 14px;
  }
  
</style>
<div class="tk_counter_inner">
    <div class="progress">
        <div class="progress-bar bg-info progress-soft" role="progressbar" style="width: 13%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
            <span class="dot-end dot-end-first"></span>
            <span class="dash-soft"></span>
            <span class="dash-label-total">Rised<br/>in a closed<br/>round</span>
        </div>
        
        <div class="progress-bar progress-bar-striped gradient" role="progressbar" aria-valuenow="@((Model.Percent-13).ToString("F0"))"
             aria-valuemin="0" aria-valuemax="100" style="width: @((Model.Percent - 13).ToString("F0"))%">
            @*             @(Model.Percent.ToString("F2"))%*@
            <div style="height: 100%;" class="s-pos_r">
                <span class="dot-end dot-middle"></span>
                <span class="dash-soft dash-current">
                    <span class="dash-label">Total raised</span>
                </span>
             </div>
        </div>

        <span class="progress_label bg-white" style="left: 30%"> <strong> @Model.Sold.ToString("N0") CWT-P </strong></span>
        <span class="progress_label bg-white" style="left: 75%"> <strong> @Model.Cap.ToString("N0") CWT-P </strong></span>
        <span class="progress_min_val">Soft cap</span>
        <span class="progress_max_val">Hard-cap</span>
        <span class="dot-end"></span>
        <span class="dash-soft dash-last"></span>
    </div>
</div>