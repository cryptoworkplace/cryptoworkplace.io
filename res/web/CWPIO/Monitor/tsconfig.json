{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "outDir": "bin"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}